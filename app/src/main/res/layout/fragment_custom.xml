<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.common.zhuz.module.xrecyclerview.XRecyclerView
        android:id="@+id/xrv_custom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/fab_button"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/dimen20dp"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        app:backgroundTint="@color/colorTheme"
        android:src="@drawable/ic_menu_send"
        android:layout_gravity="bottom|right"
        app:layout_behavior="com.common.zhuz.widget.ScrollAwareFABBehaviorDefault"
        />
</android.support.design.widget.CoordinatorLayout>